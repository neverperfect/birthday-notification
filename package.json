{
    "name": "birthday-notification",
    "version": "0.0.1",
    "main": "index.js",
    "private": true,
    "engines": {
        "node": ">=8.10.0",
        "npm": ">=5.6.0",
        "yarn": ">=1.5.1"
    },
    "scripts": {
        "start": "gulp serve",
        "start:debug": "cross-env DEBUG=boilerplate:* yarn start",
        "build": "gulp",
        "copy": "gulp copy",
        "cm": "npx git-cz",
        "babel": "gulp babel",
        "lint": "esw *.js server config --color",
        "lint:watch": "yarn lint -- --watch",
        "beautify": "es-beautifier -u -c .eslintrc.js *.js server config",
        "precommit": "yarn lint && yarn test",
        "test": "cross-env NODE_ENV=test ./node_modules/.bin/jest server/tests --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/jest --coverage --detectOpenHandles --silent",
        "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
        "report-coverage": "coveralls < ./coverage/lcov.info"
    },
    "keywords": [
        "express",
        "node",
        "node.js",
        "mongodb",
        "mongoose",
        "es6",
        "jest",
        "istanbul",
        "REST",
        "API",
        "boilerplate"
    ],
    "jest": {
        "automock": false,
        "bail": false,
        "verbose": false,
        "setupFiles": [],
        "testMatch": [
            "**/Tests/**/*.js",
            "**/?(*.)(spec|test|integration).js?(x)"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/coverage/",
            "/dist/"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "@babel/polyfill": "^7.12.1",
        "@babel/runtime": "^7.14.0",
        "@sentry/node": "^6.5.1",
        "axios": "^0.21.1",
        "babel-polyfill": "^6.26.0",
        "bcrypt": "^5.0.1",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "cron": "^1.8.2",
        "del": "^6.0.0",
        "dotenv": "^10.0.0",
        "express": "4.17.1",
        "express-jwt": "6.0.0",
        "express-validator": "^6.11.1",
        "gulp": "4.0.2",
        "gulp-load-plugins": "^2.0.7",
        "helmet": "4.6.0",
        "http-status": "^1.5.0",
        "i18n": "^0.13.3",
        "i18next": "^20.3.1",
        "i18next-express-middleware": "^2.0.0",
        "i18next-node-fs-backend": "^2.1.3",
        "istanbul": "^0.4.5",
        "jest-fetch-mock": "^3.0.3",
        "joi": "^17.4.0",
        "jsonwebtoken": "8.5.1",
        "lodash": "^4.17.21",
        "method-override": "^3.0.0",
        "moment": "^2.29.1",
        "moment-timezone": "^0.5.33",
        "morgan": "1.10.0",
        "node-cron": "^3.0.0",
        "pg": "^8.6.0",
        "pg-hstore": "^2.3.3",
        "request-promise-native": "^1.0.9",
        "run-sequence": "^2.2.1",
        "sequelize": "^6.6.2",
        "sequelize-cli": "^6.2.0",
        "supertest": "6.1.3",
        "winston": "^3.3.3",
        "winston-transport-http-stream": "^0.1.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.3",
        "@babel/core": "^7.14.3",
        "@babel/node": "^7.14.2",
        "@babel/plugin-transform-runtime": "^7.14.3",
        "@babel/preset-env": "^7.14.4",
        "@babel/register": "^7.13.16",
        "commitizen": "^4.2.4",
        "coveralls": "^3.1.0",
        "cross-env": "7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.28.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-base": "14.2.1",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-watch": "^7.0.0",
        "gulp-babel": "8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-jshint": "^2.1.0",
        "gulp-newer": "^1.4.0",
        "gulp-nodemon": "^2.5.0",
        "gulp-sourcemaps": "^3.0.0",
        "husky": "^6.0.0",
        "jest": "27.0.4",
        "jest-serial-runner": "^1.1.0",
        "jest-stare": "^2.2.2",
        "jsdom": "16.6.0",
        "jshint": "^2.13.0"
    },
    "validate-commit-msg": {
        "types": [
            "feat",
            "fix",
            "docs",
            "style",
            "refactor",
            "perf",
            "test",
            "chore",
            "revert"
        ],
        "warnOnFail": false,
        "maxSubjectLength": 100,
        "subjectPattern": "^[A-Z]+-[0-9]+ - .*",
        "subjectPatternErrorMsg": "Subject must be in format 'CMS-123 - Commit message'",
        "helpMessage": ""
    },
    "husky": {
        "hooks": {
            "pre-commit": "esw *.js server config --color && jest"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
